<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:background="@drawable/background1"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    tools:context=".AddNewStudent">

    <TextView
        android:id="@+id/newstudent_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Student"
        android:textStyle="normal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:textSize="35sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_below="@id/newstudent_txt"
        android:id="@+id/studentname_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Student Name"
        android:inputType="textCapWords"/>

    <EditText
        android:id="@+id/fathernameS_edt"
        android:layout_below="@id/studentname_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Father's Name"
        android:inputType="textCapWords"/>

    <EditText
        android:id="@+id/subjectS_edt"
        android:layout_below="@id/fathernameS_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Subject"
        android:editable="false"
        android:inputType="textCapCharacters"/>

    <EditText
        android:id="@+id/contactS_edt"
        android:layout_below="@id/subjectS_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Contact"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/studentGender_edt"
        android:layout_below="@id/contactS_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Gender[M/F]"
        android:inputType="textCapWords"/>

    <Button
        android:id="@+id/addStudentbtn"
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/studentGender_edt"
        android:text=" Add "/>

</RelativeLayout>