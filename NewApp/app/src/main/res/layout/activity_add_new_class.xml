<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:background="@drawable/background1"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    tools:context=".AddNewClass">

    <TextView
        android:id="@+id/newclass_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Class"
        android:textStyle="normal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:textSize="35sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_below="@id/newclass_txt"
        android:id="@+id/facultyname_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Faculty Name"
        android:inputType="textCapSentences"/>

    <EditText
        android:id="@+id/fSubjectName_edt"
        android:layout_below="@id/facultyname_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Subject Name"
        android:inputType="textCapSentences"/>
    <Button
        android:id="@+id/addbtn"
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fSubjectName_edt"
        android:text=" Add "/>

</RelativeLayout>