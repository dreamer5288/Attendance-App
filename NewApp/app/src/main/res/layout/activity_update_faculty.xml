<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:background="@drawable/background1"
    android:layout_width="match_parent"
    android:layout_height="425dp"
    tools:context=".UpdateFaculty">

    <TextView
        android:id="@+id/newClass_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Class"
        android:textStyle="normal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:textSize="35sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_below="@id/newClass_txt"
        android:id="@+id/facultyName_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Faculty Name"
        android:inputType="textCapWords"/>

    <EditText
        android:id="@+id/subjectName_edt"
        android:layout_below="@id/facultyName_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Subject Name"
        android:inputType="textCapCharacters"/>
    <Button
        android:id="@+id/update_btn"
        android:layout_width="200dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_style"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/subjectName_edt"
        android:text=" update "/>

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="200dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_style"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/update_btn"
        android:text=" delete "/>

</RelativeLayout>